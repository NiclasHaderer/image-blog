{
  "name": "image-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node esbuild.mjs && node -r source-map-support/register post-manager/dist/main.js --prod && next build",
    "post-manager": "node esbuild.mjs && node -r source-map-support/register post-manager/dist/main.js",
    "post-manager:watch": "nodemon -e '*' --exec 'npm run post-manager'",
    "start": "next start",
    "lint": "next lint",
    "touch-posts": "find \"posts\" -type f \\( -name \"*.md\" -o -name \"*.mdx\" -o -name \"*.json\" \\) -exec touch {} \\;",
    "postinstall": "license-report --output=json > public/licenses.json"
  },
  "nodemonConfig": {
    "ignore": [
      "post-manager/dist/*",
      ".next/*",
      "node_modules/*",
      "out/*",
      "public/*",
      "src/*"
    ],
    "watch": [
      "src",
      "post-manager",
      "posts"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@luftschloss/validation": "^0.2.0",
    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/mdx": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "@next/mdx": "^13.4.19",
    "@tabler/icons-react": "^2.32.0",
    "next-mdx-remote": "^4.4.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-photo-album": "^2.3.0",
    "react-photoswipe-gallery": "^2.2.7",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^6.0.0",
    "remark-emoji": "^4.0.0",
    "remark-gfm": "^3.0.1",
    "sass": "^1.66.1",
    "sharp": "^0.32.5",
    "slugify": "^1.6.6",
    "ubuntu-fontface": "^0.1.13"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.9",
    "@types/node": "20.5.1",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "autoprefixer": "10.4.15",
    "esbuild": "^0.19.2",
    "eslint": "8.47.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "8.1.0",
    "gray-matter": "^4.0.3",
    "license-report": "^6.4.0",
    "next": "13.4.19",
    "nodemon": "^3.0.1",
    "postcss": "8.4.28",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "source-map-support": "^0.5.21",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  }
}
